[Unit]
Description=gunicorn daemon for webtable
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/srv/webtable
Environment="PATH=/srv/webtable/.venv/bin"
ExecStart=/srv/webtable/.venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8000 main.wsgi:application
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target


